@using TusClasificados.Site.Models.ViewModels
@using TusClasificados.Site.Helpers
@model List<AnuncioViewModel>
@{
    ViewBag.Title = "Inicio";
}

<div class="container-fluid">
    @foreach (var fila in Model.Partition(3))
    {
        <div class="row">
            @foreach (var anuncio in fila)
            {
                <div class="col-sm-4">
                    <div class="panel @Html.TipoCuentaColor(anuncio.TipoAnuncio)">
                        <div class="panel-heading">
                            <h3 class="panel-title">@anuncio.Titulo</h3>
                        </div>
                        <div class="panel-body">
                            <p class="text-justify">@anuncio.Detalles</p>
                            <p class="text-justify">@anuncio.ExtraDetalles</p>
                            <p class="text-right">@anuncio.NombreAnunciante</p>
                            <p class="text-right">@anuncio.NumeroContacto</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contactanos</h2>
                <h3 class="section-subheading text-muted">Utiliza este formulario para sugerencias o punto de contacto</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Nombre *" id="name" required="" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Correo *" id="email" required="" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="Telefono *" id="phone" required="" data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Mensaje *" id="message" required="" data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">Enviar Mensaje</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
